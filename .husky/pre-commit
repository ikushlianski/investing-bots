#!/usr/bin/env bash

STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|tsx)$' || true)

if [ -z "$STAGED_FILES" ]; then
  echo "No staged TypeScript files to check"
  exit 0
fi

echo "Processing staged TypeScript files..."

WORKSPACE_PACKAGES=$(find apps packages -maxdepth 2 -name "package.json" -not -path "*/node_modules/*" 2>/dev/null | xargs -I {} dirname {} | sort -u)

PROCESSED_PACKAGES=""

for PACKAGE_DIR in $WORKSPACE_PACKAGES; do
  PACKAGE_HAS_FILES=false

  for FILE in $STAGED_FILES; do
    if [[ "$FILE" =~ ^"$PACKAGE_DIR"/ ]]; then
      PACKAGE_HAS_FILES=true
      break
    fi
  done

  if [ "$PACKAGE_HAS_FILES" = true ]; then
    PROCESSED_PACKAGES="$PROCESSED_PACKAGES $PACKAGE_DIR"
  fi
done

HAS_ERRORS=false

for PACKAGE_DIR in $PROCESSED_PACKAGES; do
  echo ""
  echo "üì¶ Processing package: $PACKAGE_DIR"

  PACKAGE_STAGED_FILES=""
  RELATIVE_FILES=""
  TEST_FILES=""

  for FILE in $STAGED_FILES; do
    if [[ "$FILE" =~ ^"$PACKAGE_DIR"/ ]]; then
      PACKAGE_STAGED_FILES="$PACKAGE_STAGED_FILES $FILE"
      RELATIVE_FILE="${FILE#$PACKAGE_DIR/}"
      RELATIVE_FILES="$RELATIVE_FILES $RELATIVE_FILE"

      if [[ "$RELATIVE_FILE" =~ \.test\.(ts|tsx)$ ]]; then
        TEST_FILES="$TEST_FILES $RELATIVE_FILE"
      fi
    fi
  done

  if [ -n "$PACKAGE_STAGED_FILES" ]; then
    echo "  üîç Linting staged files..."
    LINT_FAILED=false
    for FILE in $PACKAGE_STAGED_FILES; do
      RELATIVE_FILE="${FILE#$PACKAGE_DIR/}"
      if ! (cd "$PACKAGE_DIR" && pnpm exec eslint --fix "$RELATIVE_FILE" 2>&1); then
        LINT_FAILED=true
        HAS_ERRORS=true
      fi
      git add "$FILE" 2>/dev/null || true
    done

    if [ "$LINT_FAILED" = true ]; then
      echo "  ‚ùå Linting failed"
    fi

    echo "  üî¨ Type checking staged files..."
    if ! (cd "$PACKAGE_DIR" && pnpm exec tsc --noEmit 2>&1 | grep -v "node_modules"); then
      echo "  ‚ùå Type checking failed"
      HAS_ERRORS=true
    fi

    if [ -n "$TEST_FILES" ]; then
      echo "  üß™ Running tests for staged test files..."
      if ! (cd "$PACKAGE_DIR" && pnpm exec vitest run $TEST_FILES --reporter=verbose); then
        echo "  ‚ùå Tests failed"
        HAS_ERRORS=true
      fi
    else
      echo "  ‚ÑπÔ∏è  No test files staged, skipping tests"
    fi
  fi
done

echo ""
if [ "$HAS_ERRORS" = true ]; then
  echo "‚ùå Pre-commit checks failed! Please fix the errors above before committing."
  exit 1
fi

echo "‚úÖ Pre-commit checks complete!"
